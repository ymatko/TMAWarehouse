@model TMARequestDto

<form asp-action="OrderCreate">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-dark">Create Order</h1>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                </div>
            </div>

            <div class="row">
                <div class="col-2">
                    <label class="control-label pt-2" style="font-size:20px;">Employee Name</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="EmployeeName" class="form-control" />
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label class="control-label pt-2" style="font-size:20px;">Item</label>
                </div>
                <div class="col-10 pb-3">
                    <select asp-for="ItemID" class="form-select" asp-items="@ViewBag.Items">
                        <option disabled selected>--Select Item--</option>
                    </select>
                    <span asp-validation-for="ItemID" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label class="control-label pt-2" style="font-size:20px;">Unit Of Measurement</label>
                </div>
                <div class="col-10 pb-3">
                    <select asp-for="UnitOfMeasurement" class="form-select" asp-items="@ViewBag.Units">
                        <option disabled selected>--Select Unit Of Measurement--</option>
                    </select>
                    <span asp-validation-for="UnitOfMeasurement" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label class="control-label pt-2" style="font-size:20px;">Quantity</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label class="control-label pt-2" style="font-size:20px;">Price Without VAT</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="PriceWithoutVAT" class="form-control" />
                    <span asp-validation-for="PriceWithoutVAT" class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label class="control-label pt-2" hidden style="font-size:20px;">Comment</label>
                </div>
                <div class="col-10 pb-3">
                    <textarea asp-for="Comment" hidden class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Comment" hidden class="text-danger"></span>
                </div>
                <div class="col-2">
                    <label hidden class="control-label pt-2" style="font-size:20px;">Status</label>
                </div>
                <div class="col-10 pb-3" >
                    <input asp-for="Status" hidden class="form-control" type="hidden" value="New" />
                    <input asp-for="Status" hidden class="form-control" disabled />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="col-5 offset-2">
                    <a asp-action="OrderIndex" class="btn-outline-dark btn form-control ">Back to List</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Create" class="btn btn-success form-control" />
                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}