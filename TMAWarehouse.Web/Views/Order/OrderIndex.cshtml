@model IEnumerable<TMARequestDto>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-dark">List of Orders</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div>
			<table id="tblData" class="table table-bordered table-striped pt-3" style="width:100%">
				<thead>
					<tr>
						<th>
							ID
						</th>
						<th>
							Employee Name
						</th>
						<th>
							Group
						</th>
						<th>
							Unit Of Measurement
						</th>
						<th>
							Quantity
						</th>
						<th>
							Price Without VAT
						</th>
						<th>
							Comment
						</th>
						<th>
							Status
						</th>
						<th></th>
					</tr>
				</thead>
			</table>
		</div>
		<br />
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-action="OrderCreate" class="btn btn-outline-success"><i class="bi bi-plus-square"></i> Create New Order</a>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/order.js"></script>
}