@model ItemDto

<form asp-action="MakeOrder">
    <div class="container">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-gradient ml-0 py-3">
                <div class="row">
                    <div class="col-12 text-center">
                        <h1 class="text-dark">Create Request</h1>
                    </div>
                </div>
            </div>
            <input hidden asp-for="ItemID" />
            <input hidden asp-for="Group" />
            <input hidden asp-for="Status" />
            <input hidden asp-for="StorageLocation" />
            <input hidden asp-for="Photo" />
            <input hidden asp-for="Name" />
            <input hidden asp-for="UnitOfMeasurement" />
            <input hidden asp-for="PriceWithoutVAT" />
            <div class="card-body p-4">
                <div class="row pb-3">
                    <div class="col-6">
                    </div>
                </div>

                <div class="row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Unit Of Measurement</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="UnitOfMeasurement" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Quantity</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Quantity" class="form-control" min="1" max="@Model.Quantity" value="1"/>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Price Without VAT</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="PriceWithoutVAT" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Comment</label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="ContactPerson" class="form-control" rows="5"></textarea>
                    </div>
                    <div class="col-5 offset-2">
                        <a asp-action="ItemIndexHome" class="btn-outline-dark btn form-control ">Cancel</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Submit" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}